
#include "sys/alt_stdio.h"
#include "system.h"
#include "altera_avalon_pio_regs.h"
#include "stdint.h"

int main()
{ 
  alt_putstr("Hello from Nios II!\n");
  uint8_t on_off = 1;

  /* Event loop never exits. */
  while (1){

	  IOWR(LED_BASE, 0, ~on_off);
	  alt_busy_sleep(1000);
  };

  return 0;
}
